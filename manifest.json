{
  "name": "WikiDark",
  "description": "Wikipedia Dark Mode",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "images/moon_16.png",
    "32": "images/moon_32.png",
    "48": "images/moon_48.png",
    "64": "images/moon_64.png",
    "128": "images/moon_128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/moon_16.png",
      "32": "images/moon_32.png",
      "48": "images/moon_48.png",
      "64": "images/moon_64.png",
      "128": "images/moon_128.png"
    },
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "images/*", "js/themes.js"],
      "matches": [
        "http://*.wikipedia.org/*",
        "https://*.wikipedia.org/*"        
      ]

    }
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.wikipedia.org/*",
        "https://*.wikipedia.org/*"
      ],
      "js": ["js/jquery.js", "js/applyStyle.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://*.wikipedia.org/*",
    "https://*.wikipedia.org/*"
  ]
}
